<section>
  <h2>Edit Post</h2>

  <form class="edit-post-form">
    <div class="field">
      <label class="label" for="post-title">Title</label>
      <input class="input" type="text" id="post-title" name="post-title" value="{{post.title}}" />
    </div>
    
    <div class="field">
      <label class="label" for="post-description">Description</label>
        <div class="control">
          <textarea class="textarea" placeholder="Textarea"></textarea>
         </div>
    </div>
    <div>
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button class="button is-fullwidth is-dark" type="submit" class="btn">Save Post</button>
    <button class="delete-post-btn is-fullwidth is-dark" type="button" >Delete post</button>
  </form>
</section> 

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button class="button is-fullwidth is-dark" type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>