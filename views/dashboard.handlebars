<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div class="field">
      <label class="label" for="post-title">Title</label>
      <input class="input" type="text" id="post-title" name="post-title" />
    </div>
    <div class="field">
      <label class="label" for="post-url">Link</label>
      <input class="input" id="post-url" name="post-url" />
    </div>
    <button class="button" type="submit" class="btn">Create</button>
  </form>
</section>

<br>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>