<article class="post">
  <div class="title">
    <a href="/dashboard/edit/{{post.id}}" class="edit-link"><h3>{{title}}</h3></a>
    <p style="display: flex;"> posted by {{user.username}} on {{format_date created_at}}</p>
  </div>
  <div class="meta">
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>